- if flash[:notice]
  .notice=flash[:notice]
%h1 Edit your event


%div.edit_event_form
  = form_for [:admin, @event] do |f|
    %div
      = f.label :title
      = f.text_field :title
    %div
      = f.label :description
      = f.text_area :description
    %div
      = f.label :date
      = f.date_field :date
    %div
      = f.label :start_time
      = f.text_field :start_time
    %div
      = f.submit
