- if flash[:notice]
  .notice=flash[:notice]
%div.form_container
  %div
    %div
      %h1 Edit your event

  %div
    %div
      %div.edit_event_form
        = form_for [:organizer, @event] do |f|
          %div
            = f.label :title
            = f.text_field :title
          %div
            = f.label :description
            = f.text_area :description
          %div
            = f.label :date
            = f.date_field :date
          %div
            = f.label :start_time
            = f.text_field :start_time
          %div
          = f.fields_for :event_talk do |et|
            %div
              = et.label :talk_time
              = et.text_field :talk_time
            %div
              = et.label :talk_slots
              = et.text_field :talk_slots
            %div.right
              = f.submit "Update", :class => "button radius"
